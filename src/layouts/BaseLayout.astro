---
import '@fontsource/inter';
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Lasteaiapildid.ee',
  description = 'Lasteaiapildid Chrome\'i laiendus salvestab ja organiseerib Eliisi fotod automaatselt sinu arvutis. Loodud Eesti vanema poolt Eesti vanematele.'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="et">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Dark mode script (FOUC prevention) -->
  <script is:inline>
    document.documentElement.classList.toggle(
      "dark",
      localStorage.theme === "dark" ||
      (!("theme" in localStorage) && window.matchMedia("(prefers-color-scheme: dark)").matches)
    );
  </script>

  <!-- HTML background colors -->
  <style is:inline>
    html { background-color: oklch(1 0 0); }
    html.dark { background-color: oklch(0.145 0 0); }
  </style>

  <title>{title}</title>
  <meta name="description" content={description}>

  <!-- Favicons -->
  <link rel="icon" href="/favicon.ico" sizes="any">
  <link rel="icon" href="/favicon.svg" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
</head>
<body>
  <Header />
  <main>
    <slot />
  </main>
  <Footer />
</body>
</html>
