---
import '../styles/global.css';
import { getCollection } from 'astro:content';

const bugs = await getCollection('bugs');
const features = await getCollection('features');
---

<html lang="et">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Lasteaiapildid.ee</title>
	</head>
	<body class="p-8">
		<h1 class="text-3xl font-bold text-blue-600 mb-4">Lasteaiapildid.ee</h1>
		<p class="text-gray-600 mb-8">Astro + Tailwind CSS töötab!</p>

		<h2 class="text-2xl font-bold mb-4">Bugs ({bugs.length})</h2>
		<ul class="mb-8 space-y-2">
			{bugs.map((bug) => (
				<li class="text-gray-700">{bug.data.title}</li>
			))}
		</ul>

		<h2 class="text-2xl font-bold mb-4">Features ({features.length})</h2>
		<ul class="space-y-2">
			{features.map((feature) => (
				<li class="text-gray-700">{feature.data.title}</li>
			))}
		</ul>
	</body>
</html>
